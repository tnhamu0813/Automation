{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "2.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": "[concat(toLower(resourceGroup().tags.NamingPrefix), 'sa')]",
            "metadata": {
                "description": "name of the resource"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "location of the resource"
            }
        },
        "kind": {
            "type": "string",
            "defaultValue": "Storage",
            "metadata": {
                "description": "kind of storage account (Storage, BlobStorage)"
            }
        },
        "sku": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "metadata": {
                "description": "pricing tier (Standard_LRS, Standard_ZRS, Standard_GRS, Standard_RAGRS, Premium_LRS)"
            }
        },
        "accessTier": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "access tier when kind = BlobStorage (Hot, Cool)"
            }
        },        
        "encrypted": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Enables or disables storage account encryption"
            }
        }
    },
    "variables": {
        "apiVersion": "2016-01-01",
        "tiers": {
            "S": "Standard",
            "P": "Premium"
        },
        "accessTierHasValue": "[length(take(parameters('accessTier'), 1))]",
        "converToaccessTier": [
            null,
            "[parameters('accessTier')]"
        ]
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "tags": {
                "template": "[concat(split(split(deployment().properties.templateLink.uri,'/')[5],'.')[0],'@',split(deployment().properties.templateLink.uri,'/')[4])]"
            },
            "kind": "[parameters('kind')]",
            "sku": {
                "name": "[parameters('sku')]",
                "tier": "[variables('tiers')[toUpper(substring(parameters('sku'), 0, 1))]]"
            },
            "properties": {
                "accessTier": "[variables('converToaccessTier')[variables('accessTierHasValue')]]",
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": "[parameters('encrypted')]"
                        }
                    }
                }
            }
        }
    ]
}